<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>MyHotel</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/storage</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>UtenteServlet</servlet-name>
    <servlet-class>utente.UtenteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CameraServlet</servlet-name>
    <servlet-class>camera.CameraServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CarrelloServlet</servlet-name>
    <servlet-class>carrello.CarrelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PrenotazioneServlet</servlet-name>
    <servlet-class>prenotazione.PrenotazioneServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UtenteServlet</servlet-name>
    <url-pattern>/utente</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CameraServlet</servlet-name>
    <url-pattern>/camera</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CarrelloServlet</servlet-name>
    <url-pattern>/carrello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PrenotazioneServlet</servlet-name>
    <url-pattern>/prenotazione</url-pattern>
  </servlet-mapping>
</web-app>