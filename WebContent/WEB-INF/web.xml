<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>MyHotel</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/storage</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <error-page>
  <error-code>404</error-code>
  <location>/error.jsp</location>
  </error-page>
  <error-page>
  <exception-type>javax.servlet.ServletException</exception-type>
  <location>/error.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>prodotto.ProductControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductControl2</servlet-name>
    <servlet-class>prodotto.ProductControl2</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecensioneControl</servlet-name>
    <servlet-class>recensione.RecensioneControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UtenteControl</servlet-name>
    <servlet-class>utente.UtenteControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UtenteControl2</servlet-name>
    <servlet-class>utente.UtenteControl2</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CartControl</servlet-name>
    <servlet-class>prodotto.CartControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListadesideriControl</servlet-name>
    <servlet-class>prodotto.ListadesideriControl</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>OrdineControl</servlet-name>
    <servlet-class>ordine.OrdineControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductControl2</servlet-name>
    <url-pattern>/product2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RecensioneControl</servlet-name>
    <url-pattern>/recensioni</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UtenteControl</servlet-name>
    <url-pattern>/utente</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UtenteControl2</servlet-name>
    <url-pattern>/utente2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CartControl</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListadesideriControl</servlet-name>
    <url-pattern>/lista</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OrdineControl</servlet-name>
    <url-pattern>/ordine</url-pattern>
  </servlet-mapping>
</web-app>